// JS_TODO: converge all alt buttons into one as with alt_methods

// steps:
// 1.: searchfunktion XXXXX replace with reagent 1
// 2.: searchfunktion YYYYY replace with reagent 2
// 3.: searchfunktion ZZZZZ replace with pagename (one continuous word, no underscores no spaces)
// 4.: name .js "alt_pagename_reagent1"
// 5.: update AAAAA and BBBBB to the button displays
// 6.: update html (use template recipe) in content
// 7.: updare html shortcode (use alt_template.html) in content

document.addEventListener("DOMContentLoaded", () => {

  const btn = document.getElementById("ZZZZZ_XXXXX_alternative_switch");

  const XXXXX = {
    m_material:   document.getElementById("alt_ZZZZZ_m_m_XXXXX"),
    m_mw:         document.getElementById("alt_ZZZZZ_m_mw_XXXXX"),
    m_specs:      document.getElementById("alt_ZZZZZ_m_specs_XXXXX"),
    m_location:   document.getElementById("alt_ZZZZZ_m_l_XXXXX"),
    r_material: document.getElementById("alt_ZZZZZ_r_ms_XXXXX"),
    r_vol:      document.getElementById("alt_ZZZZZ_r_vm_XXXXX"),
    r_mol:      document.getElementById("alt_ZZZZZ_r_mol_XXXXX"),
  };

  const YYYYY = {
    m_material:   document.getElementById("alt_ZZZZZ_m_m_YYYYY"),
    m_mw:         document.getElementById("alt_ZZZZZ_m_mw_YYYYY"),
    m_specs:      document.getElementById("alt_ZZZZZ_m_specs_YYYYY"),
    m_location:   document.getElementById("alt_ZZZZZ_m_l_YYYYY"),
    r_material: document.getElementById("alt_ZZZZZ_r_ms_YYYYY"),
    r_vol:      document.getElementById("alt_ZZZZZ_r_vm_YYYYY"),
    r_mol:      document.getElementById("alt_ZZZZZ_r_mol_YYYYY"),
  };

  let usingYYYYY = false;

  function toggle() {
    for (const key in XXXXX) {
      if (!XXXXX[key] || !YYYYY[key]) continue;
        XXXXX[key].style.display = usingYYYYY ? "none" : "";
        YYYYY[key].style.display = usingYYYYY ? "" : "none";
    }
  }

  if (btn) {
    btn.addEventListener("click", () => {
      usingYYYYY = !usingYYYYY;
      toggle();

      btn.innerHTML = usingYYYYY
        ? "Use AAAAA"
        : "Use BBBBB";
    });
  }
});